.goods {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 25rpx;
  position: relative;
}
.goods .rad {
  width: 35rpx;
  height: 35rpx;
  padding-right: 35rpx;
}
.goods .count {
  position: absolute;
  bottom: 40rpx;
  right: 37rpx;
  display: flex;
  align-items: center;
  color: #8a8a8a;
}
.goods .count .reduce,
.goods .count .add {
  width: 32rpx;
  height: 32rpx;
  line-height: 28rpx;
  text-align: center;
  border-radius: 50%;
  border: 2rpx solid #8a8a8a;
}
.goods .count .num {
  margin: 0 32rpx;
  font-size: 30rpx;
}
.footer {
  height: 83rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.footer .footer_left {
  display: flex;
  align-items: center;
  flex: 1;
}
.footer .footer_left .footer_rad {
  padding: 0 24rpx;
}
.footer .footer_left .all {
  padding-right: 36rpx;
  font-size: 21rpx;
  color: #8a8a8a;
}
.footer .footer_left .add {
  width: 78rpx;
  height: 37rpx;
  color: #292929;
  font-size: 26rpx;
}
.footer .footer_left .footer_price {
  color: var(--publicColor);
  font-size: 28rpx;
}
.footer .footer_left .footer_price::before {
  content: "Â¥";
  font-size: 85%;
}
.footer .footer_right {
  width: 150rpx;
  height: 52rpx;
  line-height: 48rpx;
  border-radius: 26rpx;
  background-color: var(--publicColor);
  color: #fff;
  font-size: 21rpx;
  text-align: center;
  margin-right: 23rpx;
}
