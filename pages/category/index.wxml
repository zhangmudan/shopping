<search />
<view class="careList">
  <!-- 分类左边 -->
  <scroll-view scroll-y class="left">
    <block wx:for="{{cateData}}" wx:key="cat_id">
      <view class="left-nav {{activeIndex==index?'active':''}} " data-index="{{index}}" bindtap="navtap">
        {{item.cat_name}}
      </view>
    </block>
  </scroll-view>
  <!-- 分类右边 -->
  <scroll-view scroll-y class="right">
    <block wx:for="{{cateRight}}" wx:key="cat_id" wx:for-item="v">
      <view class="right-title">
        /
        <text>{{v.cat_name}}</text>
        /
      </view>
      <view class="right-body">
        <view wx:for="{{v.children}}" class="body-list" wx:key="cat_id" wx:for-item="i">
          <image class="img" src="{{i.cat_icon}}" />
          <view>{{i.cat_name}}</view>
        </view>
      </view>
    </block>
  </scroll-view>
</view>