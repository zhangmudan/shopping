.careList {
  display: flex;
  justify-content: space-between;
}
.careList .left {
  width: 182rpx;
  height: calc(100vh - 100rpx);
  background-color: #f3f3f3;
}
.careList .left .left-nav {
  font-size: 28rpx;
  color: #585858;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.careList .left .active {
  color: #ea4350;
  border-left: 4rpx solid #ea4350;
}
.careList .right {
  flex: 1;
  height: calc(100vh - 100rpx);
}
.careList .right .right-title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #575757;
}
.careList .right .right-body {
  display: flex;
  flex-wrap: wrap;
  justify-content: start;
  margin-bottom: 21rpx;
}
.careList .right .right-body .body-list {
  font-size: 25rpx;
  color: #2e2e2e;
  margin: 0 35rpx;
  text-align: center;
}
.careList .right .right-body .img {
  width: 120rpx;
  height: 120rpx;
}
